{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2017", "es7", "es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strict": true
  },
  "includes": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}